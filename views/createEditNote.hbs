<div id="{{_id}}">
    <form action='/note/{{#with _id}}edit/{{this}}{{else}}new{{/with}}' method='post'>
        <label for="title">Titel</label>
        <input name="title" type="text" value="{{title}}"/>

        <label for="description">Beschreibung</label>
        <textarea name="description" type="text">{{description}}</textarea>

        <label for="importance">Wichtigkeit</label>

        <label for="duedate">Erledigt bis</label>
        <input name="duedate" type="datetime" value="{{dueDate}}"/>

        <input type="checkbox" name="done" {{#if done}}checked="checked" {{/if}}>
        <label for="name">Finshed</label>

        {{#with _id}}
            <input type="submit" value="save">
        {{else}}
            <input type="submit" value="create">
        {{/with}}
    </form>
</div>